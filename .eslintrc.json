{
	"extends": [
		"airbnb-typescript-prettier",
		"plugin:react-hooks/recommended"
	],
	"plugins": [
		"simple-import-sort"
	],
	"rules": {
		"simple-import-sort/sort": "error",
		"import/order": "off",
		"sort-imports": "off",
		"react/jsx-props-no-spreading": 0,
		"react/state-in-constructor": 0
	},
	"overrides": [
		{
			"files": "server/**/*.js",
			"rules": {
				"simple-import-sort/sort": "off",
				"import/order": [
					"error",
					{
						"newlines-between": "always"
					}
				]
			}
		}
	]
}
