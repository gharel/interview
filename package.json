{
	"name": "interview",
	"version": "1.0.0",
	"description": "app to help evaluate people during interview",
	"main": "index.js",
	"scripts": {
		"utils:check": "npx npm-check --skip-unused",
		"utils:commit": "git cz",
		"dev": "ts-node --project tsconfig.server.json src/server/index.ts",
		"prettify": "prettier \"src/**/*.(ts|tsx|js|jsx|html|scss|css)\" --write",
		"lint": "npm run lint:css & npm run lint:js",
		"lint:fix": "npm run lint:css:fix & npm run lint:js:fix",
		"lint:js:fix": "eslint --ext .ts,.tsx,.js,.jsx src/** --fix",
		"lint:js": "eslint --ext .ts,.tsx,.js,.jsx src/**",
		"lint:css:fix": "stylelint \"src/**/*.{ts,tsx,js,jsx,scss,css}\" --fix",
		"lint:css": "stylelint \"src/**/*.{ts,tsx,js,jsx,scss,css}\"",
		"build:server": "tsc --project tsconfig.server.json",
		"build:next": "next build",
		"build": "npm run build:next && npm run build:server",
		"start": "set NODE_ENV=production && node dist/index.js",
		"release": "standard-version --no-verify",
		"release:first": "standard-version --first-release --no-verify"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/gharel/interview.git"
	},
	"keywords": [
		"react",
		"next.js"
	],
	"author": "Guillaume HAREL",
	"license": "ISC",
	"bugs": {
		"url": "https://github.com/gharel/interview/issues"
	},
	"homepage": "https://github.com/gharel/interview#readme",
	"dependencies": {
		"express": "^4.17.1",
		"next": "^9.3.5",
		"react": "^16.13.1",
		"react-dom": "^16.13.1",
		"styled-components": "^5.1.0",
		"styled-reset": "^4.1.3"
	},
	"devDependencies": {
		"@commitlint/config-conventional": "^8.3.4",
		"@types/express": "^4.17.6",
		"@types/node": "^13.11.1",
		"@types/react": "^16.9.34",
		"@types/styled-components": "^5.1.0",
		"babel-plugin-styled-components": "^1.10.7",
		"commitizen": "^4.0.4",
		"commitlint": "^8.3.5",
		"cz-conventional-changelog": "^3.1.0",
		"eslint": "^6.8.0",
		"eslint-config-airbnb-typescript-prettier": "^2.1.1",
		"husky": "^4.2.5",
		"lint-staged": "^10.1.3",
		"prettier": "^2.0.4",
		"standard-version": "^7.1.0",
		"stylelint": "^13.3.2",
		"stylelint-config-prettier": "^8.0.1",
		"stylelint-config-standard": "^20.0.0",
		"stylelint-config-styled-components": "^0.1.1",
		"stylelint-order": "^4.0.0",
		"ts-node": "^8.8.2",
		"typescript": "^3.8.3"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged",
			"commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
			"post-commit": "git update-index --again"
		}
	},
	"lint-staged": {
		"./src/**/*.(ts|tsx|js|jsx|html|scss|css)": [
			"prettier --write"
		],
		"./src/**/*.(ts|tsx|js|jsx)": [
			"npm run lint:js:fix",
			"npm run lint:js"
		],
		"./src/**/*.(ts|tsx|js|jsx|scss|css)": [
			"npm run lint:css:fix",
			"npm run lint:css"
		]
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	}
}
